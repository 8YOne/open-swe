# =============================================================================
# GitHub OAuth Authentication Server - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# =============================================================================
# Server Configuration
# =============================================================================
# Port for the authentication server to listen on
PORT=3001

# Environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# =============================================================================
# GitHub OAuth Application Configuration
# =============================================================================
# Create a GitHub OAuth App at: https://github.com/settings/applications/new
# For development, set Authorization callback URL to: http://localhost:3001/auth/github/callback

# GitHub OAuth App Client ID
GITHUB_CLIENT_ID=your_github_client_id_here

# GitHub OAuth App Client Secret
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# GitHub OAuth Callback URL (must match the one configured in your GitHub OAuth App)
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# =============================================================================
# Security Configuration
# =============================================================================
# Secret key for session management (generate a random string)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# JWT Secret for token signing (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Token Expiration Times
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

